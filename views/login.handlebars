<style>
    *{
        margin: 0;
        padding: 0;
    }
    .container{
        position: absolute;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: black;
    }
    form{
        display: flex;
        align-items: center;
        justify-content: space-around;
        flex-direction: column;
        height:70%;
        width: 40%;
        background: linear-gradient(45deg,aqua,aquamarine);
        border-radius: 5vw;
    }
    input{
        width: 60%;
        height: 10%;
        outline: none;
        text-align: center;
        font-size: 2vw;
        border-radius: 50vw;
        border: none;
    }
    label{
        font-size: 1.5vw;
    }
    button{
        width: 60%;
        height: 12%;
        border-radius: 50vw;
        border:none;
        background: black;
        color: white;
    }
    button:hover{
        background: gray;
        cursor: pointer;
    }
</style>
<div class="container">
    <form action="/logando" method="post">
        <h1>Login:</h1>
        <label for="nome">Nome:</label>
        <input type="text" name="nome" id="nome" required>
        <label for="senha">Senha:</label>
        <input type="password" name="senha" id="senha" required>
        <button type="submit">Logar</button>
        <a href="/criarconta">Criar uma conta</a>
        {{{aviso}}}
    </form>
</div>