<style>
    *{
        margin: 0;
        padding: 0;
    }
    .container{
        position: absolute;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: space-around;
        flex-direction: column;
        background: linear-gradient(45deg,rgb(0, 255, 149),rgb(0, 195, 255));
    }
    .tarefa{
        display: flex;
        align-items: center;
        justify-content: space-around;
        flex-direction: column;
        flex-wrap: wrap;
    }
    .geral{
        position: relative;
        display: flex;
        align-items: center;
        justify-content: space-around;
        flex-direction: row;
        height: 10%;
        border: 1px solid black;
        gap: 2vw;
        padding: 2vw;
        box-sizing: border-box;
    }
    .title{
        position:relative;
        top: 5%;
        text-transform: uppercase;
    }
    .btn{
        width: 40%;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
    }
    button{
        width: 20vw;
        height: 8vh;
        border-radius: 50vw;
        border: 1px solid black;
        font-weight: bold;
        font-size: 1.2vw;
        background: black;
        color: white;
    }
    button:hover{
        cursor:pointer;
        color: aqua;
    }
</style>
<div class="container">
    <h1 class="title">Tarefas:</h1>
    {{#each dever}}
    <div class="geral">
        <div class="tarefa">
            <h1>{{tarefa}}</h1>
            <p>{{description}}</p>
        </div>
        <a href="/deletar/{{id}}" class="btn"><button>Deletar tarefa</button></a>
    </div>
    {{/each}}
    <a href="/home" class="btn"><button>Criar outra tarefa</button></a>
</div>